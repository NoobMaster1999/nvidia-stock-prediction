modules = ["python-3.12", "c-clang14", "cpp-clang14", "nodejs-20"]
run = "npm build"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "zammad"]

[deployment]
run = ["sh", "-c", "vite build"]

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
mode = "parallel"
author = 19938695

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd stock_prediction_frontend && npm run dev -- --host 0.0.0.0 --port 5000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd stock_prediction_api/src && python main.py"

[[workflows.workflow]]
name = "Final Build"
mode = "sequential"
author = 19938695

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd stock_prediction_frontend && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd stock_prediction_api/src && python main.py"

[[ports]]
localPort = 8080
externalPort = 80
